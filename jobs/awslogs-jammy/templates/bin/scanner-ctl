#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/awslogs-jammy/helpers/ctl_setup.sh 'awslogs-jammy' 'awslogs-scanner'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u root:root /var/vcap/jobs/awslogs-jammy/bin/awslogs-scanner.sh \
         >>$LOG_DIR/${output_label}.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    # ensure all child process are really dead
    pkill -f "inotify"

    ;;
  *)
    echo "Usage: scanner-ctl {start|stop}"

    ;;

esac
exit 0
