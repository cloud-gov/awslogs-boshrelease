{
  "logfile": "/var/vcap/sys/log/awslogs-jammy/amazon-cloudwatch-agent.log",
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          <% p("awslogs-jammy.awslogs_files_config").each do |val| %>
          {
            "file_path": "<%= val["file"] %>"
            "log_group_name":  "<%= val["log_group_name"] %>"
            "log_stream_name": "<%= val["log_stream_name"] %>"
            "retention_in_days": "<%= p("awslogs-jammy.retention-in-days") %>"
          },
          <% end %>
        ]
      }
    }
  },
  "log_stream_name": "{instance_id}"
}
